@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Bewerk product";
}

<div class="form">
    <p class="headerform">Bewerk een product</p>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-row">
            <div class="input-col">
                <div class="input-container2">
                    <label class="naam1" for="Name">Productnaam:</label>
                    <input asp-for="Name" class="input" id="Name" placeholder="Productnaam" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="straatnaam1" for="Description">Beschrijving:</label>
                    <input asp-for="Description" class="input" id="Description" placeholder="Beschrijving" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="plaats1" for="Price">Prijs:</label>
                    <input asp-for="Price" class="input" id="Price" placeholder="Prijs" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="plaats1" for="StockQuantity">Voorraad:</label>
                    <input asp-for="StockQuantity" class="input" id="StockQuantity" placeholder="Voorraad" type="number" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
            </div>
            <div class="input-col">
                <div class="input-container2">
                    <label class="land1" for="SalePrice">Aanbiedingsprijs:</label>
                    <input asp-for="SalePrice" class="input" id="SalePrice" placeholder="Aanbiedingsprijs" type="number" step="0.01" />
                    <span asp-validation-for="SalePrice" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="postcode1" for="SaleStartDate">Start aanbieding:</label>
                    <input asp-for="SaleStartDate" class="input" id="SaleStartDate" type="date" />
                    <span asp-validation-for="SaleStartDate" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="huisnummer1" for="SaleEndDate">Einde aanbieding:</label>
                    <input asp-for="SaleEndDate" class="input" id="SaleEndDate" type="date" />
                    <span asp-validation-for="SaleEndDate" class="text-danger"></span>
                </div>
                <div class="input-container2">
                    <label class="huisnummer1" for="ImageUrl">Afbeelding URL:</label>
                    <input asp-for="ImageUrl" class="input" id="ImageUrl" placeholder="Afbeelding URL" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group button-row" style="margin-top: 10px; margin-left: 260px;">
            <a class="annuleer" asp-action="Index">Annuleer</a>
            <input type="submit" value="Bewerk" class="aanmaken" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
